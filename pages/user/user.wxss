/*个人中心头部*/
.user_head{
  width: 100%;
  height: 340rpx;
  display: flex;
  flex-direction: column;
  background-image: url("http://resource.gesilaa6.club/imgs/hmprint/head_bg.png");
}
.userinfo_btn{
  width: 100rpx;
  height:40rpx;
  margin-top: 100rpx;
}
.user_head_img{
  width: 140rpx;
  height: 140rpx;
  margin-left: 50rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 5rpx solid white;
}
.user_head_right{
  margin-left: 44rpx;
  margin-top: 50rpx;
}
.user_nick_name{
  color: white;
  margin-top: 10rpx;
  font-size: 40rpx;
}
.user_signature{
  color: white;
  margin-top: 25rpx;
  font-size: 32rpx;
}

/*个人中心中间部分1*/
.user_content1{
  width: 92%;
  height: 150rpx;
  margin-left: 4%;
  margin-top: -75rpx;
  background: white;
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
}
.content1_item{
  width: 50%;
  height:100%;
  display: flex;
  flex-direction: row;
}
.content1_item_img{
  width: 80rpx;
  height: 80rpx;
  margin: 40rpx;
}
.item_price{
  margin-top: 10rpx;
  font-size: 28rpx;
  color:#666666;
}


/*个人中心中间部分2*/
.user_content2{
  width: 92%;
  margin-left: 4%;
  background: white;
  border-radius: 20rpx;
  margin-top: 40rpx;
}
.content2_item{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}
.content2_item_txt{
  font-size: 32rpx;
  color: #666666;
  margin-left: 4%;
}
.content2_item_img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 8%;
}

.line{
  width: 92%;
  height: 2rpx;
  margin-left: 4%;
  background: #f0f2f1;
}
